{% extends 'base.html.twig' %}

{% block title %}Weather{% endblock %}

{% block body %}
<form method="post">

    <h1 class="h3 mb-3 font-weight-normal">Please provide your city</h1>

    <label for="inputCity">City</label>
    <input name="city" id="inputCity" class="form-control" required>

    <button class="btn btn-lg btn-primary" type="submit">
        Send
    </button>

    <br>
    <br>
    {% if tempAverage and city %}
        Current weather in {{ city }}:
        <div class="alert alert-danger">{{ temp1 }} °C (OpenWeatherMap.org)</div>
        <div class="alert alert-danger">{{ temp2 }} °C (WeatherAPI.com)</div>
        <div class="alert alert-danger">{{ tempAverage }} °C (average)</div>
    {% elseif error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}
</form>
{% endblock %}
